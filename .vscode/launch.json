    "version": "0.2.0",
    "configurations": [
        {
            "name": "ROS: Attach",
            "type": "ros",
            "request": "attach"
        },
        {
            "name": "C++: Launch TOWR",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/devel_isolated/towr_ros/lib/towr_ros/towr_ros_app",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "ROS_MASTER_URI",
                    "value": "http://localhost:11311"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb"
        }



    ]
}